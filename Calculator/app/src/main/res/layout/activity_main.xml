<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:background="@color/grey"
        android:inputType="textPersonName"
        android:gravity="right|center"
        android:textSize="70dp"
        android:text="0.0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/butAC"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="AC"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butDividebyX"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="1/x"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>

            <Button
                android:id="@+id/butMode"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="%">

            </Button>

            <Button
                android:id="@+id/butDivide"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="/"
                android:background="@color/teal_200">

            </Button>

        </TableRow>
        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but7"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but8"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but9"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butMultiply"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="*"
                android:background="@color/teal_200">

            </Button>

        </TableRow>
        <TableRow
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but4"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but5"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but6"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butMinus"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="-"
                android:background="@color/teal_200">

            </Button>

        </TableRow>
        <TableRow
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but1"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but2"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/but3"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butPlus"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="+"
                android:background="@color/teal_200">

            </Button>

        </TableRow>
        <TableRow
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/butdot"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="."
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butzero"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="0"
                android:onClick="numberEvent"
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>
            <Button
                android:id="@+id/butequal"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="="
                android:layout_marginRight="4dp"
                android:background="@color/teal_200">

            </Button>


        </TableRow>
    </TableLayout>

</LinearLayout>